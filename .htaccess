RewriteEngine On

# Handle direct access to PHP files
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Redirect /pages/ URLs to root directory files
RewriteRule ^pages/(.*)$ $1 [L,R=301]

# Ensure proper handling of PHP files
RewriteCond %{REQUEST_FILENAME} -f
RewriteRule ^(.*)\.php$ $1.php [L]

# Set default index file
DirectoryIndex index.php

# Handle 404 errors
ErrorDocument 404 /daily-habit-tracker/index.php
